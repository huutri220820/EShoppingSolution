@model ModelAndRequest.Common.LoginRequest

<div class="w-25">
    <form method="post">
        <div class="form-group mb-3">
            <input type="text" class="form-control" placeholder="Enter username" required />
        </div>
        <div class="form-group  mb-3">
            <input type="password" class="form-control" id="inputPassword" placeholder="Enter password" required />
        </div>
        <div class="form-group  mb-3">
            <input type="checkbox" value="true" /> Remember
        </div>
        <button type="submit" class="btn btn-success">Login</button>
    </form>
</div>